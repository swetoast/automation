  {% elif current_pressure < 1015 %}
    {% set pressure_message = 'The atmospheric pressure is slightly low today, which might suggest cloudy weather or possible precipitation.' %}
  {% elif current_pressure < 1020 %}
    {% set pressure_message = 'The atmospheric pressure is average today, indicating normal weather conditions.' %}
  {% elif current_pressure < 1025 %}
    {% set pressure_message = 'The atmospheric pressure is slightly high today, which often suggests good weather.' %}
  {% else %}
    {% set pressure_message = 'The atmospheric pressure is very high today, indicating very dry and clear weather conditions.' %}
  {% endif %}
{% elif current_season == 'summer' %}
  {% if current_pressure < 1010 %}
    {% set pressure_message = 'The atmospheric pressure is quite low today, indicating that there might be a storm or bad weather.' %}
  {% elif current_pressure < 1015 %}
    {% set pressure_message = 'The atmospheric pressure is slightly low today, which might suggest cloudy weather or possible precipitation.' %}
